<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Expense Tracker</title>
    <link
      href='https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.css'
      rel='stylesheet'
    />
    <link
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/css/style.css' />

  </head>
  <body class='bg-gray-100 min-h-screen'>
    {{#unless user}}
      <header class='bg-blue-600 text-white p-4'>
        <nav class='container mx-auto flex justify-between items-center'>
          <a href='/' class='text-2xl font-bold'>SpendWise</a>
          <div>
            <a href='/login' class='mr-4 hover:underline'>Login</a>
            <a href='/signup' class='hover:underline'>Signup</a>
          </div>
        </nav>
      </header>
    {{/unless}}
    <div class='flex'>
      {{#if user}}
        <aside class='w-64 bg-gray-800 text-white min-h-screen p-4'>
          <ul>
            <li class='mb-4'>
              <a
                href='/dashboard'
                class='flex items-center p-2 text-base font-normal text-white rounded-lg hover:bg-gray-700'
              >
                <i class='fas fa-user-circle mr-3'></i>
                Welcome,
                {{user.username}}
              </a>
            </li>
            <li class='mb-4'>
              <a
                href='/dashboard'
                class='flex items-center p-2 text-base font-normal text-white rounded-lg hover:bg-gray-700'
              >
                <i class='fas fa-tachometer-alt mr-3'></i>
                Dashboard
              </a>
            </li>
            <li class='mb-4'>
              <a
                href='/expenses'
                class='flex items-center p-2 text-base font-normal text-white rounded-lg hover:bg-gray-700'
              >
                <i class='fas fa-wallet mr-3'></i>
                Expenses
              </a>
            </li>
            {{! <li class='mb-4'>
              <a
                href='/graph'
                class='flex items-center p-2 text-base font-normal text-white rounded-lg hover:bg-gray-700'
              >
                <i class='fas fa-chart-line mr-3'></i>
                Graphs
              </a>
            </li> }}
            <li class='mb-4'>
              <a
                href='/income'
                class='flex items-center p-2 text-base font-normal text-white rounded-lg hover:bg-gray-700'
              >
                <i class='fas fa-money-bill-wave mr-3'></i>
                Income
              </a>
            </li>
            <li class='mb-4'>
              <a
                href='/auth/logout'
                class='flex items-center p-2 text-base font-normal text-white rounded-lg hover:bg-gray-700'
              >
                <i class='fas fa-sign-out-alt mr-3'></i>
                Logout
              </a>
            </li>
          </ul>
        </aside>
      {{/if}}

      <main class='flex-1 container mx-auto mt-8 p-4'>
        {{{body}}}
      </main>
    </div>

    <footer class='bg-gray-200 text-center p-4 mt-8'>
      <p>&copy; 2024 Expense Tracker</p>
    </footer>
    <script src='https://cdn.jsdelivr.net/npm/chart.js'></script>
    <script src='/js/main.js'></script>
  </body>
</html>