<div class='flex flex-col lg:flex-row gap-8'>
  <div class='bg-white shadow rounded p-6 lg:w-2/5'>
    <h3 class='text-xl font-semibold mb-4'>Recent Transactions</h3>
    <div class='overflow-x-auto'>
      <table class='min-w-full leading-normal'>
        <thead>
          <tr class='bg-blue-100'>
            <th
              class='px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider'
            >Description</th>
            <th
              class='px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider'
            >Amount</th>
            <th
              class='px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider'
            >Category</th>
            <th
              class='px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider'
            >Date</th>
          </tr>
        </thead>
        <tbody>
          {{#each user.expenses}}
            <tr class='expense-item'>
              <td
                class='px-5 py-5 border-b border-gray-200 bg-white text-sm'
              >{{this.description}}</td>
              <td
                class='px-5 py-5 border-b border-gray-200 bg-white text-sm'
              >${{this.amount}}</td>
              <td
                class='px-5 py-5 border-b border-gray-200 bg-white text-sm'
              >{{this.category.name}}</td>
              <td
                class='px-5 py-5 border-b border-gray-200 bg-white text-sm'
              >{{formatDate this.date}}</td>
            </tr>
          {{else}}
            <tr>
              <td
                colspan='4'
                class='px-5 py-5 border-b border-gray-200 bg-white text-center text-sm'
              >No expenses recorded yet.</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{! Graph for dashboard }}
  <div class='bg-white text-center shadow rounded p-6 lg:w-3/5' '>
    <h3 class='text-xl font-semibold mb-4'>Expense Summary</h3>
    <div class='bg-blue-50 shadow rounded p-6'>
      <div class='h-96 mb-4'>
        <canvas id='expenses-chart'></canvas>
      </div>
      <p class='text-lg'><span class='font-semibold'>Total Expenses:</span>
        $<span id='total-expenses'></span></p>
    </div>
  </div>

  <div class='bg-white text-center shadow rounded p-6 lg:w-3/5'>
    <h3 class='text-xl font-semibold mb-4'>Budget Overview</h3>
    <div class='flex items-center justify-between mb-4'>
      <div>
        <p class='text-lg font-semibold'>Total Income</p>
        <p class='text-lg'>$<span id='total-income'>{{totalIncome}}</span></p>
      </div>
      <div>
        <p class='text-lg font-semibold'>Total Expenses</p>
        <p class='text-lg'>$<span id='total-expenses'>{{totalExpenses}}</span></p>
        </div>
        <div>
          <p class='text-lg font-semibold'>Budget</p>
          <p class='text-lg'>$<span id='budget'>{{budget}}</span></p>
          </div>
          </div>
          </div>
          </div></div>
          
</div>
<script
  src='https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js'
></script>
