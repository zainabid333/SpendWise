<div class='max-w-7xl mx-auto px-4 py-8'>
  <h2 class='text-2xl font-bold mb-6'>Welcome, {{user.username}}!</h2>
  <div class='bg-white shadow rounded p-6 mb-8'>
    <h3 class='text-xl font-semibold mb-4'>Your Profile</h3>
    <p class='mb-2'><span class='font-semibold'>Username:</span>
      {{user.username}}</p>
    <p><span class='font-semibold'>Email:</span> {{user.email}}</p>
  </div>

  <div class='flex flex-col lg:flex-row gap-8'>
    <div class='bg-blue-50 shadow rounded p-6 lg:w-2/5'>
      <h3 class='text-xl font-semibold mb-4'>Recent Transactions</h3>
      <div class='overflow-x-auto'>
        <table class='w-full table-auto'>
          <thead>
            <tr class='bg-blue-100'>
              <th class='px-4 py-2 text-left'>Description</th>
              <th class='px-4 py-2 text-left'>Amount</th>
              <th class='px-4 py-2 text-left'>Category</th>
              <th class='px-4 py-2 text-left'>Date</th>
            </tr>
          </thead>
          <tbody>
            {{#each user.expenses}}
              <tr class='expense-item'>
                <td class='border px-4 py-2'>{{this.description}}</td>
                <td class='border px-4 py-2'>${{this.amount}}</td>
                <td class='border px-4 py-2'>{{this.category.name}}</td>
                <td class='border px-4 py-2'>{{formatDate this.date}}</td>
              </tr>
            {{else}}
              <tr>
                <td colspan='4' class='border px-4 py-2 text-center'>No expenses
                  recorded yet.</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <div class='lg:w-3/5'>
      <h3 class='text-xl font-semibold mb-4'>Summary</h3>
      <div class='max-w-4xl mx-auto px-4 py-8'>
  <h2 class='text-2xl font-bold mb-6'>Expense Graph for {{user.username}}</h2>
  <div class='bg-white shadow rounded p-6'>
    <div class='h-96 mb-4'>
      <canvas id='expenses-chart'></canvas>
    </div>
    <p class='text-lg'><span class='font-semibold'>Total Expenses:</span>
      $<span id='total-expenses'></span></p>
  </div>

      <div class='bg-white shadow rounded p-6 mb-4'>
        <h4 class='text-lg font-semibold mb-2'>Total Income</h4>
        <p class='text-lg'>$<span>{{totalIncome}}</span></p>
      </div>
      <div class='bg-white shadow rounded p-6 mb-4'>
        <h4 class='text-lg font-semibold mb-2'>Total Expenses</h4>
        <p class='text-lg'>$<span>{{totalExpenses}}</span></p>
      </div>
      <div class='bg-white shadow rounded p-6'>
        <h4 class='text-lg font-semibold mb-2'>Budget</h4>
        <p class='text-lg'>$<span>{{budget}}</span></p>
      </div>
    </div>
  </div>

  <div class='max-w-4xl mx-auto px-4 py-8'>
    <h3 class='text-xl font-semibold mb-4'>Expense Summary</h3>
    <div class='h-96 mb-4'>
      <canvas id='expenses-chart'></canvas>
    </div>
  </div>
</div>