<div class='max-w-4xl mx-auto'>
  <h2 class='text-2xl font-bold mb-6'>Manage Income</h2>
  <form
    action='/incomes'
    method='post'
    class='bg-white shadow rounded p-6 mb-8'
  >
    <div class='grid grid-cols-1 md:grid-cols-2 gap-4'>
      <div>
        <label for='income-amount' class='block mb-1'>Amount:</label>
        <input
          type='number'
          id='income-amount'
          name='amount'
          step='0.01'
          required
          class='w-full px-3 py-2 border rounded'
        />
      </div>
      <div>
        <label for='income-description' class='block mb-1'>Description:</label>
        <input
          type='text'
          id='income-description'
          name='description'
          required
          class='w-full px-3 py-2 border rounded'
        />
      </div>
      <div>
        <label for='income-date' class='block mb-1'>Date:</label>
        <input
          type='date'
          id='income-date'
          name='date'
          required
          class='w-full px-3 py-2 border rounded'
        />
      </div>
      <div>
        <label for='income-category' class='block mb-1'>Category:</label>
        <select
          id='income-category'
          name='category'
          required
          class='w-full px-3 py-2 border rounded'
        >
          <option value='salary'>Salary</option>
          <option value='freelance'>Freelance</option>
          <option value='investment'>Investment</option>
          <option value='other'>Other</option>
        </select>
      </div>
    </div>
    <div class='mt-6'>
      <button type='submit' class='btn btn-primary'>Add Income</button>
    </div>
  </form>
</div>